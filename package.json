{
  "name": "uri",
  "version": "0.0.1",
  "description": "A simple WHATWG URI parser.",
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "typings": "typings/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "typings"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/uri.git"
  },
  "keywords": [
    "URI",
    "URL"
  ],
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/uri/issues"
  },
  "homepage": "https://github.com/nuintun/uri#readme",
  "scripts": {
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "build": "npm run clean && npm run build:main && npm run format",
    "build:main": "npm run build:cjs && npm run build:esm && npm run build:typings",
    "build:typings": "tsc --declaration --emitDeclarationOnly --declarationDir typings"
  },
  "dependencies": {
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "^18.11.19",
    "magic-string": "^0.27.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.3.1",
    "rollup": "^3.14.0",
    "typescript": "^4.9.5"
  }
}
